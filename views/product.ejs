<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Style Avenue</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <style>
    .btn-aesthetic {
      background-color: #ff7171;
      border-color: #ff7171;
      color: #fff;
      font-weight: bold;
      padding: 10px 20px;
      border-radius: 8px;
      transition: background-color 0.3s ease;
      margin: 0 auto; /* Center the button horizontally */
      text-align: center; /* Center the text within the button */
    }

    .btn-aesthetic:hover {
      background-color: #ff5252;
      border-color: #ff5252;
    }
  </style>

  <body>
    <!-- navbar -->

    <%- include('navbar.ejs'); %>
    <!-- end navbar -->
    <br />

    <div class="container">
      <% if (role === 'admin') { %>
      <!-- Display admin-specific content -->
      <a href="/product/create" class="btn btn-primary btn-aesthetic">Create</a>

      <% } %>
      <br />
      <br />
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% data.forEach((el)=> { %>
        <div class="col">
          <div class="card h-100">
            <div class="col d-flex justify-content-center">
              <img
                src="<%= el.image %>"
                class="card-img-top img-fluid"
                style="max-width: 100%; height: auto"
                alt="Product Image"
              />
            </div>
            <div>
              <div class="card-body">
                <h5 class="card-title"><%= el.name %></h5>
                <p class="card-text"><%= el.description %></p>
                <p class="card-text"><%= formatCurrency(el.price) %></p>
              </div>
            </div>

            <div class="card-footer">
              <div class="d-grid gap-2">
                <% if (role === 'admin') { %>
                <!-- Display admin-specific content -->
                <a
                  href="/product/<%= el.id %>/edit"
                  class="btn btn-info"
                  style="background-color: rgb(249, 169, 89)"
                  >Edit</a
                >

                <a
                  href="/product/<%= el.id %>/delete"
                  class="btn btn-info"
                  style="background-color: rgb(239, 167, 167)"
                  >Delete</a
                >

                <a
                  href="/product/<%= el.id %>"
                  class="btn btn-info"
                  style="background-color: rgb(120, 233, 250)"
                  >Detail</a
                >

                <% } else { %>
                <!-- Display content for other roles or when role is not defined -->
                <a
                  href="/orders/po/<%= el.id %>"
                  class="btn btn-primary"
                  style="
                    background-color: #ff7171;
                    border-color: #ff7171;
                    color: #fff;
                  "
                  >Pre-Order</a
                >

                <a
                  href="/product/<%= el.id %>"
                  class="btn btn-secondary"
                  style="background-color: rgb(120, 233, 250)"
                  >Detail</a
                >

                <% } %>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
