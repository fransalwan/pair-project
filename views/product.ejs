<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Style Avenue</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- navbar -->

    <%- include('navbar.ejs'); %>
    <!-- end navbar -->
    <br />
    <% if (role === 'admin') { %>
    <!-- Display admin-specific content -->
    <button><a href="/product/create">Create</a></button>
    <% } %>

    <div class="container">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% data.forEach((el)=> { %>
        <div class="col">
          <div class="card h-100">
            <img
              src="<%= el.image %>"
              class="card-img-top img-fluid"
              style="max-width: 60%; height: auto"
              alt="Product Image"
            />

            <div class="card-body">
              <h5 class="card-title"><%= el.name %></h5>
              <p class="card-text"><%= el.description %></p>
              <p class="card-text"><%= formatCurrency(el.price) %></p>
            </div>
            <div class="card-footer">
              <div class="d-grid gap-2">
                <% if (role === 'admin') { %>
                <!-- Display admin-specific content -->
                <a href="/product/<%= el.id %>/edit" class="btn btn-info"
                  >Edit</a
                >
                <a href="/product/<%= el.id %>/delete" class="btn btn-danger"
                  >Delete</a
                >

                <a href="/product/<%= el.id %>" class="btn btn-secondary"
                  >Detail</a
                >
                <% } else { %>
                <!-- Display content for other roles or when role is not defined -->
                <button type="submit">
                  <a href="/orders/po/<%= el.id %>" class="btn btn-primary"
                    >Pre-Order</a
                  >
                </button>

                <a href="/product/<%= el.id %>" class="btn btn-secondary"
                  >Detail</a
                >
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
